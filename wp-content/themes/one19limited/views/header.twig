<div class="page">
<header id="masthead" class="site-header">
  <div class="site-branding">
    {{ custom_logo }}
  </div>
  <div class="love-local">
    {{ widgets.love_local }}
  </div>
  <!-- .site-branding -->
  <!-- Just checking if post 259 exists -->

  {% if important.status == 'publish' %}
    <div class="important-header">
      <h3>
        {{ important.post_title }}
      </h3>{{ important.post_content }}
    </div>
  {% endif %}
  <button class="menu-toggle"
    aria-controls="primary-menu"
    aria-expanded="false">
    <i class="fas fa-bars"></i>
    <span>Menu</span>
  </button>
  <nav id="site-navigation" class="main-navigation">
    <!-- Add button for mobile -->
    <div class="menu-menu-container">
      <ul class="nav-main">
        {% for item in menu.items %}
          <li class="nav-main-item {{ item.classes|join(' ') }}">
            <a class="nav-main-link" href="{{ item.link }}">{{ item.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </nav>
  <!-- #site-navigation -->
</header>
